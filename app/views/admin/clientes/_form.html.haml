= form_for [:admin, @entity], remote: true do |f|
  = hidden_field_tag :from_autocomplete, @from_autocomplete
  = hidden_field_tag :autocomplete_id, @autocomplete_id
  .modal-body
    .alert.alert-block.alert-danger.alert-dismissable.error_box{style: "display:none;"}
      %a.close{data: {'dismiss': 'alert'}} &times;
      %ul.list-unstyled.errors
    .row
      .col-md-6
        .row
          .col-md-6
            .form-group
              = f.label :nombre_y_apellidos, class: 'control-label'
              = f.text_field :nombre_y_apellidos, class: 'form-control'
          .col-md-6
            .form-group
              = f.label :empresa, class: 'control-label'
              = f.text_field :empresa, class: 'form-control'
        .row
          .col-md-6
            .form-group
              = f.label :tipo_identificacion, class: 'control-label'
              = f.select :tipo_identificacion,options_for_select([['Cedula', '0'], ['RUC', '1'], ['Pasaporte', '2']], selected: '0'),{}, {class: 'form-control'}
          .col-md-6
            .form-group
              = f.label :identificacion, class: 'control-label'
              = f.text_field :identificacion, class: 'form-control'
        .row
          .col-md-6
            = f.label :tipo, class: 'control-label'
            = f.select :tipo, options_for_select(Cliente.tipos, selected: 'asegurado'),{}, {class: 'form-control'}
        .row
          .col-md-12
            .form-group
              = f.label :direccion, class: 'control-label'
              = f.text_area :direccion, class: 'form-control'
      .col-md-6
        .col-md-12
          .form-group
            = f.label :correo, class: 'control-label'
            = f.text_field :correo, class: 'form-control'
        .col-md-4
          .form-group
            = f.label :telefono, class: 'control-label'
            = f.text_field :telefono, class: 'form-control'
        .col-md-4
          .form-group
            = f.label :celular, class: 'control-label'
            = f.text_field :celular, class: 'form-control'
  .modal-footer
    = link_to "Cancelar", '#', class: 'btn', data: {dismiss: 'modal'}
    = button_tag class: 'btn btn-red' do
      %i.glyphicon.glyphicon.glyphicon-floppy-disk
      Guardar