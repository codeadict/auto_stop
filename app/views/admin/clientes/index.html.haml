.row
  .col-md-6
    %span
      = form_tag admin_clientes_path, remote: true, method: :get do
        .form-group
          %p
            Puedes buscar: nombre y apellidos: ej. Pedro Chicaiza, cédula: ej. 1716976384
          .input-group
            = text_field_tag :search, '', placeholder: 'Buscar', class: 'form-control', aria:{describedby:"search_button"}
            %span#search_button.input-group-addon{style: 'padding: 0 3px;'}
              = button_tag class: 'btn btn-red', data: { disable_with: 'Buscando...'} do
                %i.glyphicon.glyphicon-search.col-md-6
  .pull-right
    = link_to new_admin_cliente_path, remote: true, class: 'btn btn-red' do
      %i.glyphicon.glyphicon-plus-sign
      Agregar Cliente

.row
  .col-md-12
    %table.table.table-condensed.table-striped.table-bordered.table-hover
      %thead
        %tr
          %th Cliente(Persona y/o Empresa)
          %th Tipo Cliente
          %th Identificación
          %th Correo
          %th Teléfonos
          %th.text-center Vehículos Ingresados
          %th.text-center{style: 'width: 90px;'} Acciones
      %tbody#entities_content
        = render 'list'
